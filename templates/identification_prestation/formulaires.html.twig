{% extends 'base.html.twig' %}

{% block body %}
<div style="display: block">
    <div style="display: flex ; justify-content: center ; align-items: center ; margin-top: 8vh">
        <a href="{{ path('app_identification_prestation_create') }}"><button type="button" class="text-white bg-orange-900 hover:bg-orange-300 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-orange-900 dark:hover:bg-orange-300 focus:outline-none dark:focus:ring-orange-300">Créer un formulaire</button></a>
    </div>

    <div id="divTabForms">
        <div class="my-2" style="margin-bottom: 5vh">
            <h2 class="text-2xl font-bold text-center text-black-500">Formulaires identification prestation</h2>
        </div>


        <table  class="table-auto" id="tableauFormulaires">
            <thead>
                <tr>
                    <th>Id Formulaire</th>
                    <th>Société</th>
                    <th>Prénom / Nom</th>
                    <th>Prestation</th>
                    <th>Commanditaire</th>
                    <th>Heure Arrivée</th>
                    <th>Heure Départ</th>
                </tr>
            </thead>
            <tbody>
                {% for formulaire in formulairesIdentificationPrestation %}
                    <tr>
                        {% if formulaire.heureDepart is null %}
                        <td data-label="Id Formulaire"><a style="color: blue ; text-decoration: underline" href="{{ path('app_identification_prestation_validate' , { 'id' : formulaire.id }) }}">{{ formulaire.id }}</a></td>
                        {% else %}
                        <td data-label="Id Formulaire">{{ formulaire.id }}</td>
                        {% endif %}
                        <td data-label="Société">{{ formulaire.societe }}</td>
                        <td data-label="Nom Prénom">{{ formulaire.nomPrenom }}</td>
                        <td data-label="Prestation">{{ formulaire.prestation }}</td>
                        <td data-label="Commanditaire">{{ formulaire.commanditaire }}</td>
                        <td data-label="Heure Arrivée">{{ formulaire.heureArrivee | date ('Y-m-d H:i:s') }}</td>
                        <td data-label="Heure Départ">
                            {% if formulaire.heureDepart is not null %}
                                {{ formulaire.heureDepart | date ('Y-m-d H:i:s' ) }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
    </div>
</div>
{% endblock %}

{% block title %}
Formulaires Identification Prestation
{% endblock %}

