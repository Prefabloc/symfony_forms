{% extends 'base.html.twig' %}

{% block body %}
    <div class="centered-content">
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500">Formulaire identification prestation</h2>
        </div>
        <div class="max-w-lg mx-auto" style="width: 25rem">
            {{ form_start(identificationPrestationForm) }}
            <div class="mb-5">
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        <label for="{{ identificationPrestation.societe }}">Société</label>
                    </div>
                    <div>
                        <input type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-900 sm:text-sm sm:leading-6"
                        id="{{ identificationPrestation.societe }}"
                        name="{{ field_name(identificationPrestationForm.societe) }}"
                        value="{{ identificationPrestation.societe }}"
                        readonly
                        >
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        <label for="{{ field_name(identificationPrestationForm.nomPrenom) }}">Nom/Prénom</label>
                    </div>
                    <div>
                        <input type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-900 sm:text-sm sm:leading-6"
                               id="{{ field_name(identificationPrestationForm.nomPrenom) }}"
                               name="{{ field_name(identificationPrestationForm.nomPrenom) }}"
                               value="{{ identificationPrestation.nomPrenom }}"
                               readonly
                        >
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        <label for="{{ field_name(identificationPrestationForm.prestation) }}">Prestations</label>
                    </div>
                    <div>
                        <input type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-900 sm:text-sm sm:leading-6""
                               id="{{ field_name(identificationPrestationForm.prestation) }}"
                               name="{{ field_name(identificationPrestationForm.prestation) }}"
                               value="{{ identificationPrestation.prestation }}"
                               readonly
                        >
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        <label for="{{ field_name(identificationPrestationForm.nomPrenom) }}">Commanditaire</label>
                    </div>
                    <div>
                        <input type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-900 sm:text-sm sm:leading-6"
                               id="{{ field_name(identificationPrestationForm.commanditaire) }}"
                               name="{{ field_name(identificationPrestationForm.commanditaire) }}"
                               value="{{ identificationPrestation.commanditaire }}"
                               readonly
                        >
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        <label>Heure d'arrivée</label>
                    </div>
                    <div>
                        <input type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-900 sm:text-sm sm:leading-6"
                               id="heureArrivee"
                               name="heureArrivee"
                               value="{{ identificationPrestation.heureArrivee | date ('Y-m-d H:i:s') }}"
                               readonly
                        >
                    </div>
                </div>
            </div>
            <div>
                {{ form_row( identificationPrestationForm.save) }}
            </div>

            {{ form_end(identificationPrestationForm) }}
        </div>
    </div>
{% endblock %}

{% block title %}
    Formulaire | Identification | Prestation
{% endblock %}

{% block javascripts %}

{% endblock %}