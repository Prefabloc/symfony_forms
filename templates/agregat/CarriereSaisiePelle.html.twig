{% extends 'base.html.twig' %}

{% block title %}
    Agregat | Carrière | Saisie | Pelle
{% endblock %}

{% block body %}



    <div class="centered-content">
        <div>
            <img class="mx-auto" src="https://prefabloc.re/wp-content/uploads/2020/08/pfb-logo-horizontal-clr-01.png"
                 alt="" width="300" height="200">
        </div>
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500">Carrière Saisie Pelle</h2>
        </div>
        <div>
            {{ form_start(agregatCarriereSaisiePellForm) }}
            <div>
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        {{ form_label(agregatCarriereSaisiePellForm.typeMateriau ) }}
                    </div>
                    <div>
                        {{ form_widget(agregatCarriereSaisiePellForm.typeMateriau ) }}
                    </div>
                </div>
                <div>
                    {{ form_errors(agregatCarriereSaisiePellForm.typeMateriau ) }}
                </div>
            </div>
            <div>
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        {{ form_label(agregatCarriereSaisiePellForm.quantite ) }}
                    </div>
                    <div>
                        {{ form_widget(agregatCarriereSaisiePellForm.quantite ) }}
                    </div>
                </div>
                <div>
                    {{ form_errors(agregatCarriereSaisiePellForm.quantite ) }}
                </div>
            </div>
            <div>
                {{ form_row(agregatCarriereSaisiePellForm.save ) }}
            </div>

            {{ form_end(agregatCarriereSaisiePellForm) }}
        </div>
    </div>
{% endblock %}

