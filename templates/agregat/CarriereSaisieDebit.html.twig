{% extends 'base.html.twig' %}

{% block title %}
    Agregat | Carrière | Saisie | Débit
{% endblock %}


{% block body %}



    <div class="centered-content">
        <div>
            <img class="mx-auto" src="https://prefabloc.re/wp-content/uploads/2020/08/pfb-logo-horizontal-clr-01.png"
                 alt="" width="300" height="200">
        </div>
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500">Carriere Saisie Débit</h2>
        </div>
        <div>
            {{ form_start(agregatCarriereSaisieDebitForm) }}
            <div>
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                    {{ form_label(agregatCarriereSaisieDebitForm.typeArticle) }}
                    </div>
                    <div>
                    {{ form_widget(agregatCarriereSaisieDebitForm.typeArticle) }}
                    </div>
                </div>
                <div>
                {{ form_errors(agregatCarriereSaisieDebitForm.typeArticle) }}
                </div>
            </div>
            <div>
                <div style="display: flex" class="divSeparator">
                    <div class="inputSeparator">
                        {{ form_label(agregatCarriereSaisieDebitForm.nbrTonne) }}
                    </div>
                    <div>
                        {{ form_widget(agregatCarriereSaisieDebitForm.nbrTonne) }}
                    </div>
                </div>
                <div>
                    {{ form_errors(agregatCarriereSaisieDebitForm.nbrTonne) }}
                </div>
            </div>
            <div>
                {{ form_row(agregatCarriereSaisieDebitForm.save ) }}
            </div>

            {{ form_end(agregatCarriereSaisieDebitForm) }}
        </div>
    </div>

{% endblock %}

