{% extends 'base.html.twig' %}

{% block body %}

    <div class="centered-content">
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500 mtop2">Prefabloc Saisie Déclassement</h2>
        </div>
        <div class="max-w-sm mx-auto" style="width: 100%">
            {{ form_start(prefablocSaisieDeclassementForm) }}
            <div class="divChampsForm">
                <div class="mb-5">
                    <div style="display: flex ; justify-content: space-between" class="divSeparator divAutocompleteArticle" >
                        <label for="{{ field_name(prefablocSaisieDeclassementForm.article ) }}">Article : </label>
                        <input type="text"
                               id="prefablocDeclassementInputArticle"
                               name="prefablocDeclassementInputArticle"
                               placeholder="Nom de l'article..."
                               autocomplete="off"
                               class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black-600 sm:text-sm sm:leading-6"
                               style="height: 2rem ; width: 40%"
                        >
                        <ul id="prefablocDeclassementSuggestionsArticle" class="suggestionsArticle"></ul>
                    </div>
                    <div>

                        {{ form_errors(prefablocSaisieDeclassementForm.article) }}
                    </div>
                </div>
                <div class="mb-5">
                    <div style="display: flex" class="divSeparator">
                        <div class="inputSeparator">
                            {{ form_label(prefablocSaisieDeclassementForm.motifDeclassement) }}
                        </div>
                        <div>
                            {{ form_widget(prefablocSaisieDeclassementForm.motifDeclassement) }}
                        </div>
                    </div>
                    <div>
                        {{ form_errors(prefablocSaisieDeclassementForm.motifDeclassement) }}
                    </div>
                </div>
                <div class="mb-5">
                    <div style="display: flex" class="divSeparator">
                        <div class="inputSeparator">
                            {{ form_label(prefablocSaisieDeclassementForm.quantite) }}
                        </div>
                        <div>
                            {{ form_widget(prefablocSaisieDeclassementForm.quantite) }}
                        </div>
                    </div>
                    <div>
                        {{ form_errors(prefablocSaisieDeclassementForm.quantite) }}
                    </div>
                </div>
            </div>

            <div class="mtop2">
                {{ form_row( prefablocSaisieDeclassementForm.save ) }}
            </div>

            {{ form_end(prefablocSaisieDeclassementForm) }}
        </div>
    </div>
{% endblock %}

{% block title %}
    Prefabloc | Saisie | Déclassement
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded' , function () {
            const searchArticle = document.getElementById('prefablocDeclassementInputArticle');
            const suggestions = document.getElementById('prefablocDeclassementSuggestionsArticle')


            searchArticle.addEventListener('input' , function () {
                const mot = searchArticle.value ;

                if ( mot.length < 2 ) {
                    suggestions.style.display = 'none' ;
                }

                fetch(`/article/autocomplete?mot=${encodeURIComponent(mot)}`)
                    .then( response => response.json() )
                    .then( data => {
                        suggestions.innerHTML = '' ;

                        if ( data.length > 0 ) {
                            suggestions.style.display = 'block' ;

                            data.forEach( item => {
                                const liGlobale = document.createElement('li');
                                const divNom = document.createElement('div');
                                const divRefStock = document.createElement('div');

                                divNom.innerHTML = '<strong>' + item.label + '</strong>';
                                divRefStock.innerHTML= '<strong> Ref : </strong>' + item.reference + '<strong> / Stock : </strong>'  + item.stock;


                                liGlobale.addEventListener( 'click' , () => {
                                    idArticle = item.id ;
                                    searchArticle.value = item.label;
                                    suggestions.style.display = 'none' ;
                                    verifArticle = true ;
                                })

                                liGlobale.appendChild(divNom);
                                liGlobale.appendChild(divRefStock);
                                suggestions.appendChild(liGlobale);
                            })
                        } else {
                            suggestions.style.display = 'none' ;
                        }
                    })
            })

            document.addEventListener('click', function (event) {
                if (searchArticle.contains(event.target)) {
                    suggestions.style.display = 'none';
                }
            });
        })

    </script>
{% endblock %}
