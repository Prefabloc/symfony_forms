{% extends 'base.html.twig' %}

{% block body %}

    <div class="centered-content">
        <div>
            <img class="mx-auto" src="https://prefabloc.re/wp-content/uploads/2020/08/pfb-logo-horizontal-clr-01.png"
                alt="" width="300" height="300">
        </div>
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500">{{ label }}</h2>
        </div>
        <div class="my-10">
            {{ form_start(form) }}
            {{ form_widget(form.mode, {'attr': {'class': 'select-dropdown w-full border border-gray-300 rounded-lg
            p-2'}}) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
        <div class="flex gap-4">

            {% if form.vars.value == null %}
                <button class="bg-orange-900 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" onClick="startProduction()"> Demarrer
                </button>
            {% else %}
                <button class="bg-red-500 text-white font-bold py-2 px-4 rounded"
                    onClick="endProduction()"> Arreter
                </button>
                <button class="bg-gray-500 text-white font-bold py-2 px-4 rounded">
                    Commentaire
                </button>
            {% endif %}
        </div>
        <div class="mt-10" id="productionInfoDiv">
            {% if form.vars.value != null %}
            <p>Commenc√© depuis {{form.vars.value.startedAt|date("d/m/Y h:i:s")}}</p>

            {% endif %}
        </div>
    </div>
{% endblock  %}

{% block javascripts %}
    <script>

        function endProduction() {
            productionId = "{{productionId}}"
            window.location.href = `/prefabloc/saisie/production?id=${productionId}`;
        }

        async function startProduction() {
            let url = "{{ url }}"

            const select = document.getElementById('{{form.children.mode.vars.id}}');
            const selectedMode = select.value;
            let fullUrl = `${url}/start`

            const response = await fetch(fullUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ mode: selectedMode })
            })

            window.location.href = url
        }

    </script>
{% endblock %}

{% block title %}
    Saisie Production
{% endblock %}