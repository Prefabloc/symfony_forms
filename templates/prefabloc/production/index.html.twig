{% extends 'base.html.twig' %}

{% block body %}

    <div class="centered-content">
        <div>
            <img id="imgPrefabloc" class="mx-auto" src="https://prefabloc.re/wp-content/uploads/2020/08/pfb-logo-horizontal-clr-01.png"
                alt="" width="300" height="300" style="margin-top: 2vh">
        </div>
        <div class="my-2">
            <h2 class="text-2xl font-bold text-center text-black-500">{{ label }}</h2>
        </div>
        <div style="width: 100%">
            {{ form_start(productionForm) }}
            <div class="divAutocompleteArticle searchContainer" >
                <label for="{{ field_name(productionForm.article ) }}">Article : </label>
                    <input type="text"
                           id="prefablocProductionSearchArticle"
                           name="prefablocProductionSearchArticle"
                            {% if productionForm.vars.value == null %}
                           placeholder="Nom de l'article..."
                            {% else %}
                                value="{{ articleLabel }}"
                                readonly
                            {% endif %}
                           autocomplete="off"
                           class="rounded"
                           style="height: 2rem ; width: 30%"
                    >
                <ul id="prefablocProductionSuggestionsArticle" class="suggestionsArticle"></ul>
            </div>
            {{ form_end(productionForm, {'render_rest': false}) }}
        </div>

        <div class="flex gap-4">
            {% if productionForm.vars.value == null %}
                <button id="startProd" class="bg-orange-900 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded"> Démarrer
                </button>
            {% else %}
                <button id="stopProd" class="bg-red-500 text-white font-bold py-2 px-4 rounded"> Arreter
                </button>
                <button class="bg-gray-500 text-white font-bold py-2 px-4 rounded" onclick="showInfoModal()">
                    Commentaire
                </button>
            {% endif %}
        </div>
        <div class="mt-10" id="productionInfoDiv">
            {% if productionForm.vars.value != null %}
            <p>Commencé depuis {{productionForm.vars.value.startedAt|date("d/m/Y h:i:s")}}</p>

            {% endif %}
        </div>
    </div>

{% include 'includes/_modalSignalement.html.twig' %}

{% endblock  %}

{% block javascripts %}
    <script src="{{ asset('scripts/Autocomplete.js') }}"></script>
    <script src="{{ asset('scripts/functionsEnvoiBack.js') }}"></script>

    <script>
        let verifArticle = false;
        let idArticle = null ;

        document.addEventListener('DOMContentLoaded' , function () {
            const startProd = document.getElementById('startProd');
            const stopProd = document.getElementById('stopProd')
            const searchArticle = document.getElementById('prefablocProductionSearchArticle');
            const suggestions = document.getElementById('prefablocProductionSuggestionsArticle')
            const url = '/article/autocomplete' ;

            const autoC = new Autocomplete( searchArticle , suggestions , url )
            document.addEventListener( 'click' , autoC.hideSuggestions );

            if ( startProd ) {
                startProd.addEventListener( 'click' , async function startProduction() {
                    let idArticle = autoC.idArticle ;
                    envoyerDonnees( idArticle );
                })
            }

            stopProd.addEventListener( "click",  function endProduction() {
                productionId = "{{productionId}}"
                window.location.href = `/prefabloc/saisie/production?id=${productionId}`;
            })


        })

    </script>
{% endblock %}

{% block title %}
    Saisie Production
{% endblock %}