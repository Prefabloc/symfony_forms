{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="centered-content">
    <div class="my-2">
        <h2 class="text-2xl font-bold text-center text-black-500">Register</h2>
    </div>
    <div class="max-w-sm mx-auto">
        {{ form_start(registrationForm) }}
        <div class="mb-5">
            <div style="display: flex" class="divSeparator">
                <div class="inputSeparator">
                    {{ form_label(registrationForm.username) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.username) }}
                </div>
            </div>
            <div>
                {{ form_errors(registrationForm.username) }}
            </div>
        </div>
        <div class="mb-5">
            <div style="display: flex" class="divSeparator">
                <div class="inputSeparator">
                    {{ form_label(registrationForm.plainPassword) }}
                </div>
                <div>
                    {{form_widget(registrationForm.plainPassword) }}
                </div>
            </div>
            <div>
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="mb-5">
            <div style="display: flex" class="divSeparator">
                <div class="inputSeparator">
                    {{ form_label(registrationForm.prenom) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.prenom) }}
                </div>
            </div>
            <div>
                {{ form_errors(registrationForm.prenom) }}
            </div>
        </div>
        <div class="mb-5">
            <div style="display: flex" class="divSeparator">
                <div class="inputSeparator">
                    {{ form_label(registrationForm.nom) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.nom) }}
                </div>
            </div>
            <div>
                {{ form_errors(registrationForm.nom) }}
            </div>
        </div>
        <div class="mb-5">
            <div style="display: flex" class="divSeparator">
                <div class="inputSeparator">
                    {{ form_label(registrationForm.societe) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.societe) }}
                </div>
            </div>
            <div>
                {{ form_errors(registrationForm.societe) }}
            </div>
        </div>

        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
